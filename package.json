{
  "name": "kiosk",
  "version": "1.0.0",
  "description": "Kisosk mit Electron, Express und Angular",
  "main": "dist/index.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "ts-node src/server.ts",
    "build-client": "rm dist/public/ -rf && cd client && npm run build",
    "build": "rm dist -rf && tsc --sourcemap false && npm run build-client",
    "start": "tsc && electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "demo-data": "ts-node src/setup/data.ts",
    "lint": "tslint --project ."
  },
  "author": "Niel Rohling",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "node-json-db": "^1.3.0",
    "node-xlsx": "^0.16.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.58",
    "@electron-forge/maker-deb": "^6.0.0-beta.58",
    "@electron-forge/maker-rpm": "^6.0.0-beta.58",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.58",
    "@electron-forge/maker-zip": "^6.0.0-beta.58",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.17.5",
    "@types/node-xlsx": "^0.15.2",
    "electron": "^11.4.10",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "kiosk"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
